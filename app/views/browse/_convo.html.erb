<div class="bg-light border-end bg-gradient h-100" id="convo">
  <button class="float-end" id="close-convo">X</button>
  <h2 class="convo-head text-center py-3 border-bottom">Sample</h2>
  <%# メッセージ %>
  <div class="conversation p-1">
    <div id="messages" class="px-2" data-my-id="<%= current_account.id %>">
      <%# メッセージパーシャル %>
    </div>
  </div>
  <%# フォーム %>
  <div class="bg-info sending-message p-1 w-100 bottom-0 position-absolute">
      <div class="d-flex">
        <input type="text" class="form-control p-2 flex-grow-1 bd-highlight" data-behavior="room_speaker" id="sending">
      </div>
  </div>
</div>
