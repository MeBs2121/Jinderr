<div class="col-sm-6 pt-5 px-0 meeting bg-gradient position-relative" id="meeting">

  <h2 class="fs-1 text-center mb-5">Want to Chat?</h2>

  <div class="meeting-cards d-flex align-items-center flex-column">
    <ul id="slides" class="mb-4">
      <% @strangers.each_with_index do |stranger, index| %>
        <li class="slide <%= "showing" if index == 0 %>" data-id="<%= stranger.id %>">
          <div class="position-relative">
            <%= card_image stranger %>
            <span class="fs-3 card-nickname"><%= stranger.nickname %></span>
          </div>
        </li>
      <% end %>
    </ul>
    
        <div class="meeting-btns text-center">
          <button id="dislike" class="d-inline-block my-2 mx-4">👎</button>
          <button id="like" class="d-inline-block my-2 mx-4">👍</button>
        </div>

  </div>

  <div id="good-message">
  </div>

  <%# チャット %>
  <%= render 'convo' %>
</div>
