<div class="col-sm-6 pt-5 px-0 meeting bg-gradient position-relative" id="meeting">

  <h2 class="fs-1 text-center mb-5">Want to Chat? <%= @strangers.count %></h2>

  <div class="meeting-cards d-flex align-items-center flex-column">
    <ul id="slides" class="mb-4">
      <% @strangers.each_with_index do |stranger, index| %>
        <li class="slide <%= "showing" if index == 0 %>" data-id="<%= stranger.id %>">
          <div class="position-relative">
            <%= image_for stranger, "card-image" %>
            <span class="fs-3 card-nickname"><%= stranger.nickname %></span>
          </div>
        </li>
      <% end %>
    </ul>

        <div class="meeting-btns text-center">
          <button id="dislike" class="d-inline-block my-2 mx-4"><i class="fas fa-times-circle text-danger fa-lg"></i></button>
          <button id="like" class="d-inline-block my-2 mx-4"><i class="fas fa-check-circle text-success fa-lg"></i></button>
          <!-- <button id="like" class="d-inline-block my-2 mx-4">👍</button> -->
        </div>

  </div>

  <div id="good-message">
  </div>

  <div id="curtain" class="curtain <%= 'hide' unless current_account.heart.stock == 0 %>">
    <h4 class="limit-text bg-danger text-light fw-bold text-center py-2">You've reached the today's limit.</h4>
  </div>

  <%# チャット %>
  <%= render 'convo' %>
</div>
