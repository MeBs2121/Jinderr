<h2 class="pb-2 mb-4 border-bottom">Matchers</h2>

<% @account.matchers.each do |m| %>
  <div class="row m-0" data-account-id="1">
    <div class="p-3">
      <div class="d-flex align-items-center">
        <%= display_image m, 40 %>
        <div class="who-sent-what">
          <span class="d-block"><%= m.nickname %></span>
          <span class="d-block text-secondary">Sample message sent.</span>
        </div>
        <%= button_to 'unfollow', unfollow_path(m.id), method: :post , remote: true%>
      </div>
    </div>
  </div>
<% end %>